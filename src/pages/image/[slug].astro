---
import { useSanityClient } from "@sanity/astro";
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";

export async function getStaticPaths() {
  let images = await useSanityClient().fetch(`*[_type == 'imageContent']{
                                title,
                                "slug": slug.current,
                                "imageUrl": imageField.asset->url
                        }`);

  return images.map(({ title, imageUrl, slug }: any) => {
    return {
      params: { slug: slug },
      props: {
        title,
        imageUrl,
      },
    };
  });
}
const { slug } = Astro.params;
const { title, imageUrl } = Astro.props;
---

<Layout>
  <!-- <h1>{slug}</h1> -->
  <!-- <div class="row"> -->
  <div class="col" slot="body">
    <div class="imageContainer">
      <img src=`${imageUrl}?w=1500` alt="" class="image" />
    </div>
    <div class="info">
      <h2>{title}</h2>
      <p>lorem ipsum</p>
    </div>
  </div>
</Layout>

<style lang="scss">
