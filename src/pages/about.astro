---
import Layout from "../layouts/Layout.astro";
const response = await fetch("https://picsum.photos/v2/list?page=2&limit=20");
const photos = await response.json();
---

<Layout>
  <div class="content">
    <h1 transition:name="title">About</h1>
  </div>
</Layout>

<style lang="scss">
  .content {
    background-color: yellow;

    h1 {
      color: blue;
    }

    .row {
      display: flex;
      gap: 1rem;
    }

    .col {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    img {
      object-fit: cover;
      display: flex;
      flex-grow: 1;
      max-width: 100%;
      height: auto;
      border: solid 1px white;
    }
  }
</style>
